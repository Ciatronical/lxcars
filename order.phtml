          },
          error:  function(){
            alert( "Error getUnits()!" );
          }
        })

        //Calculate rowprice
        $( document ).on( 'keyup','.recalc', function(){
          var price = parseFloat( $( ':focus' ).parents().eq( 2 ).find( '[name=sellprice_as_number]' ).val() );
          var number = parseFloat( $( ':focus' ).parents().eq( 2 ).find( '[name=qty_as_number]' ).val() );
